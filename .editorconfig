[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,css,html,json}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[.{babel,nyc}rc]
indent_style = space
indent_size = 2

[.yml]
indent_style = space
indent-size = 4
trim_trailing_whitespace = false

[.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
